{
    "output_path": "benchmarks/netperf/vcu118/pmc_tcp_sndbuf",
    "ssh_key": "extra_files/freebsd_test_id_rsa",
    "concurrent_instances": 1,
    "reuse_instances": true,
    "instances": [{
        "name": "hybrid",
        "baseline": true,
        "kernel": "CHERI-GFE-NODEBUG",
        "platform": "vcu118",
        "cheri_target": "riscv64-purecap",
        "kernelabi": "hybrid",
	    "platform_options": {
		    "cores": 2,
		    "vcu118_bios": "{sdk_path}/sdk/bbl-gfe/riscv64-purecap/bbl"
	    }
	}, {
        "name": "purecap",
        "baseline": false,
        "kernel": "CHERI-PURECAP-GFE-NODEBUG",
        "platform": "vcu118",
        "cheri_target": "riscv64-purecap",
        "kernelabi": "purecap",
	    "platform_options": {
		    "cores": 2,
		    "vcu118_bios": "{sdk_path}/sdk/bbl-gfe/riscv64-purecap/bbl"
	    }
	}, {
        "name": "purecap w/o subobj",
        "baseline": false,
        "kernel": "CHERI-PURECAP-NO-SUBOBJ-GFE-NODEBUG",
        "platform": "vcu118",
        "cheri_target": "riscv64-purecap",
        "kernelabi": "purecap",
        "cheribuild_kernel": false,
	    "platform_options": {
		    "cores": 2,
		    "vcu118_bios": "{sdk_path}/sdk/bbl-gfe/riscv64-purecap/bbl"
	    }
	}, {
        "name": "hybrid UMA fixup",
        "baseline": false,
        "kernel": "CHERI-GFE-BUCKET-ADJUST",
        "platform": "vcu118",
        "cheri_target": "riscv64-purecap",
        "kernelabi": "hybrid",
        "cheribuild_kernel": false,
	    "platform_options": {
		    "cores": 2,
		    "vcu118_bios": "{sdk_path}/sdk/bbl-gfe/riscv64-purecap/bbl"
	    }
	}, {
        "name": "purecap UMA fixup",
        "baseline": false,
        "kernel": "CHERI-PURECAP-GFE-BUCKET-ADJUST",
        "platform": "vcu118",
        "cheri_target": "riscv64-purecap",
        "kernelabi": "purecap",
        "cheribuild_kernel": false,
	    "platform_options": {
		    "cores": 2,
		    "vcu118_bios": "{sdk_path}/sdk/bbl-gfe/riscv64-purecap/bbl"
	    }
	}],
    "benchmarks": [
        {
        "name": "tcp_stream_64M_{param_sndbuf}",
        "desc": "TCP buf={param_sndbuf}",
        "type": "netperf",
        "reuse_instance": true,
        "iterations": 12,
	    "drop_iterations": 2,
	    "remote_output_dir": "/tmp/benchmark-output",
        "parameterize": {
            "param_sndbuf": [1, 8, 64, 128, 256, 512, 1024, 4096, 8192, 16384, 32768, 65536, 131072, 1049000, 4194000]
        },
        "benchmark_dataset": {
		    "type": "netperf-data",
		    "run_options": {
                "netperf_options": [
			        "-P", "1",
			        "-T", "0,1",
			        "-l", "-67110000",
			        "-t", "TCP_STREAM", "--",
			        "-o", "SOCKET_TYPE,PROTOCOL,DIRECTION,ELAPSED_TIME,THROUGHPUT,THROUGHPUT_UNITS,REQUEST_SIZE,RESPONSE_SIZE,TRANSPORT_MSS,CONFIDENCE_ITERATION,UUID,NETPERF_ABI,KERNEL_ABI,COMMAND_LINE",
			        "-m", "{param_sndbuf}",
                    "-M", "{param_sndbuf}",
                    "-s", "32K",
                    "-S", "32K",
			        "-u", "{uuid}"],
                "netserver_options": ["-D"]
		    }
        },
        "datasets": {
		    "netperf-pmc": {
                "type": "pmc"
		    }
        }
	}
    ]
}
