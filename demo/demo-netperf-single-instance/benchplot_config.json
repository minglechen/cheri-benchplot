{
    "output_path": "~/git/cheri/cheri-benchplot/tests/demo-netperf-single-instance",
    "sdk_path": "~/git/cheri/cherisdk",
    "ssh_key": "~/git/cheri/cheri-benchplot/tests/freebsd_id_rsa",
    "cheribuild_path": "~/git/cheri/cheribuild/cheribuild.py",
    "instances": [
        {
            "baseline": true,
            "kernel": "CHERI-QEMU-NODEBUG",
            "platform": "qemu",
            "cheri_target": "riscv64-purecap",
            "kernelabi": "hybrid",
            "platform_options": {
                "qemu_trace": true,
                "qemu_trace_categories": ["stats"]
            }
        }
    ],
    "benchmarks": [
        {
            "name": "udp_rr_50_1b",
            "desc": "UDP RR 5K transactions 1-byte",
            "type": "netperf",
            "output_file": "{netperf_output}",
            "extra_files": ["{netperf_pmc}"],
            "benchmark_options": {
                "qemu_log_output": "{netperf_qemu_stats}",
                "netperf_options": ["-P", "1", "-i", "1", "-g", "qemu", "-G", "{netperf_pmc}",
                                    "-l", "-50", "-t", "UDP_RR", "--", "-o", "all",
                                    "-r", "1,1", "-u", "{uuid}"],
                "netserver_options": ["-D"]
            },
            "datasets": {
                "netperf-output": {
                    "name": "netperf-output-{uuid}.csv",
                    "parser": "netperf-data"
                },
                "netperf-pmc": {
                    "name": "netperf-pmc-{uuid}.csv",
                    "parser": "pmc"
                },
                "netperf-qemu-stats": {
                    "name": "netperf-qemu-stats-{uuid}.pb",
                    "parser": "qemu-stats"
                }
            }
        }
    ]
}
